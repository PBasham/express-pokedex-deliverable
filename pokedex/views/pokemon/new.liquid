{% layout "layout.liquid" %}
{% block headerTitle %}
<form action="/pokemon/{{index}}" method="GET">
    <input class="back-btn form-btn" type="submit" value="Back">
</form>
<h1>Add Pokemon to Pokedex</h1>
{% endblock%}
{% block content %}
<div class="container">
    <form action="/pokemon" method="POST">
        <input class="add-btn form-btn" type="submit" value="Create Pokemon">
    <div class="pokemon-entry-grid-template">
            <div class="pokemon-entry-quicklook grid-item">
                <p><strong>ID:</strong> 
                    <input 
                    type="string"
                    name="id"
                    placeholder="Ex: 001"
                    required
                    >
                </p>
                <hr>
                <p><strong>Name:</strong> 
                    <input 
                    type="string"
                    name="name"
                    placeholder="name"
                    required
                    >
                </p>
                <p><strong>Img:</strong> 
                    <input 
                    type="string"
                    name="img"
                    placeholder="img_src.jpg"
                    required
                    >
                </p>
                <p><strong>Classification:</strong> 
                <br />
                <input 
                    type="string"
                    name="classification"
                    placeholder="Pokemon classification"
                    required
                    >
                </p>
                <p id="typeP"><strong>Type:</strong></p>
                <input class="input-wide"
                    type="string"
                    name="type"
                    placeholder="enter types seperating with a ','"
                    required
                >
            </div>
            <div class="pokemon-entry-stats grid-item">
                <h2>Stats</h2>
                <hr>
                <p><strong>HP:</strong> <input type="number" min="1" max="500" name="stats.hp" value="{{pokemon.stats.hp}}" required></p>
                <p><strong>Attack:</strong> <input type="number" min="1" max="500" name="stats.attack" value="{{pokemon.stats.attack}}" required></p>
                <p><strong>Defence:</strong> <input type="number" min="1" max="500" name="stats.defense" value="{{pokemon.stats.defense}}" required></p>
                <p><strong>spAttack:</strong> <input type="number" min="1" max="500" name="stats.spattack" value="{{pokemon.stats.spattack}}" required></p>
                <p><strong>spDefense:</strong> <input type="number" min="1" max="500" name="stats.spdefense" value="{{pokemon.stats.spdefense}}" required></p>
                <p><strong>speed:</strong> <input type="number" min="1" max="500" name="stats.speed" value="{{pokemon.stats.speed}}" required></p>
            </div>
            <div class="pokemon-entry-misc grid-item">
                <h2>Details</h2>
                <hr>
                <p><strong>Sex:</strong></p>
                <P><strong>Male:</strong> <input type="number" min="0" max="100" step="0.01" name="misc.sex.male" placeholder="" required>%</P>
                <P><strong>Female:</strong> <input type="number" min="0" max="100" step="0.01" name="misc.sex.female" placeholder="" required>%</P>
                <p><strong>Abilities:</strong></p>
                <P><strong>Hidden:</strong> <input type="text" name="misc.abilities.hidden" placeholder="" required></P>
                <P><strong>Normal:</strong> <input type="text" name="misc.abilities.normal" placeholder="" required></P>
                <P><strong>Height:</strong> <input type="number" min="0" max="100" step="0.01" name="misc.height" placeholder="" required></P>
                <P><strong>Weight:</strong> <input type="number" min="0" max="100" step="0.01" name="misc.weight" placeholder="" required></P>
            </div>
            <div class="pokemon-entry-damages grid-item">
                <h2>Damages</h2>
                <hr>
                <p><strong>Normal:</strong> <input class="input-edit" 
                    name="damages.normal"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.normal}}"
                    required
                    >
                </p>
                <p><strong>Fire:</strong> <input class="input-edit" 
                    name="damages.fire"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.fire}}"
                    required
                    >
                </p>
                <p><strong>Water:</strong> <input class="input-edit" 
                    name="damages.water"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.water}}"
                    required
                    >
                </p>
                <p><strong>Electric:</strong> <input class="input-edit" 
                    name="damages.electric"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.electric}}"
                    required
                    >
                </p>
                <p><strong>Grass:</strong> <input class="input-edit" 
                    name="damages.grass"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.grass}}"
                    required
                    >
                </p>
                <p><strong>Ice:</strong> <input class="input-edit" 
                    name="damages.ice"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.ice}}"
                    required
                    >
                </p>
                <p><strong>Fight:</strong> <input class="input-edit" 
                    name="damages.fight"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.fight}}"
                    required
                    >
                </p>
                <p><strong>Poison:</strong> <input class="input-edit" 
                    name="damages.poison"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.poison}}"
                    required
                    >
                </p>
                <p><strong>Ground:</strong> <input class="input-edit" 
                    name="damages.ground"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.ground}}"
                    required
                    >
                </p>
                <p><strong>Flying:</strong> <input class="input-edit" 
                    name="damages.flying"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.flying}}"
                    required
                    >
                </p>
                <p><strong>Psychic:</strong> <input class="input-edit" 
                    name="damages.psychic"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.psychic}}"
                    required
                    >
                </p>
                <p><strong>Bug:</strong> <input class="input-edit" 
                    name="damages.bug"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.bug}}"
                    required
                    >
                </p>
                <p><strong>Rock:</strong> <input class="input-edit" 
                    name="damages.rock"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.rock}}"
                    required
                    >
                </p>
                <p><strong>Ghost:</strong> <input class="input-edit" 
                    name="damages.ghost"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.ghost}}"
                    required
                    >
                </p>
                <p><strong>Dragon:</strong> <input class="input-edit" 
                    name="damages.dragon"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.dragon}}"
                    required
                    >
                </p>
                <p><strong>Dark:</strong> <input class="input-edit" 
                    name="damages.dark"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.dark}}"
                    required
                    >
                </p>
                <p><strong>Steel:</strong> <input class="input-edit" 
                    name="damages.steel"
                    type="number" 
                    step="0.01"
                    min="0" 
                    max="99"
                    value="{{pokemon.damages.steel}}"
                    required
                    >
                </p>
            </div>
        </div>
    </form>
</div>
{% endblock%}